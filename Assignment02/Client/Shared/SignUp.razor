@code {
    private User newUser = new User();
    private string errorLabel = "";
    
    private void CreateNewUser()
    {
        try
        {
            UserService.CreateUserAsync(newUser);
            NavigationManager.NavigateTo("/Login");
        }
        catch (Exception e)
        {
            errorLabel = e.Message;
        }
    }

